<Window x:Class="Learning_English.Statistic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learning_English"
        mc:Ignorable="d"
        Title="Statistic" Height="450" Width="800" ResizeMode="NoResize" Icon="statistic.ico" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <TextBlock x:Name="TextBlockAllWordsCount" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Всего вопросов: " VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlockCorrectWordsCount" HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" Text="Правильных ответов:" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlockIncorrectWordsCount" HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" Text="Неправильных ответов: " VerticalAlignment="Top"/>

    </Grid>
</Window>
